rule "PosthemorrhagicAnemia"
when
    $patient : /patients[retyculocytes > 2.5, bloodVolume == BloodVolume.DECREASED, rbc < 4.5, mchc < 310, fe < 60,
    skinPalenes == true, tachycardia == true, dizziness == true, fatigue == true, dyspnea == true, tachypnea == true,
    internHemorrage == true, externHemorrage == true]
then
    $patient.setAnemia("Anemic Syndrome");
end

rule "HemolyticAnemia"
when
    $patient : /patients[hb > 8 && hb < 13.5, epo > 18.5, retyculocytes > 2.5, rbc > 5.9, vcm > 100, mch > 32,
     hbUrine == true, feUrine == true, fe > 170, bilirubine > 1.0, ldh >150, haptoglobin < 41, skinPalenes == true,
     fatigue == true, jaundice == true, splenomegalia == true, cranealBallooning == true, aplasticCrisis == true]
then
    $patient.setAnemia("Hemolytic Anemia");
end

rule "InheritedSpherocytosis"
when
    $patient : /patients[retyculocytes > 2.5, mcv < 80, mchc < 310, bilirubine > 1.0, ldh > 150, jaundice == true,
    splenomegalia == true, cranealBallooning == true, aplasticCrisis == true, bacterianInfection == true,
    osteoporosis == true, boneDeformation == true, maxilarBoneHyperplasia == true]
then
    $patient.setAnemia("Inherited spherocytosis");
end

rule "Thalassemia"
when
    $patient : /patients[mcv < 80, mchc < 360, skinPalenes == true, palpitations == true, headAche == true,
    fatigue == true, dyspnea == true, coldLimp == true, nausea == true, brittleNails == true, tongueInflamation == true]
then
    $patient.setAnemia("Iron-Deficiency Anemia");
end

rule "MegaloblasticAnemia"
when
    $patient : /patients[anysocytosis < 11.5, mcv > 100, mchc > 360, b12 < 200, folicAcid < 2.7, skinPalenes == true,
    fatigue == true, internHemorrage == true, externHemorrage == true, petechiae == true]
then
    $patient.setAnemia("Megaloblastic Anemia");
end

rule "AplasticAnemia"
when
    $patient : /patients[plaquets < 7.4, leucocytes< 4.5, rbc < 4.5, skinPalenes == true, headAche == true,
    fatigue == true, dyspnea == true]
then
    $patient.setAnemia("Aplastic Anemia");
end

rule "ChronicAnemia"
when
    $patient : /patients[epo < 2.6]
then
    $patient.setAnemia("Chronic Anemia");
end

rule "Policythemia"
when
    $patient : /patients[hb > 17.5, epo > 18.5, hematocrit > 53, bloodVolume == BloodVolume.INCREASED,
    glucocorticoids > 25]
then
    $patient.setAnemia("Policythemia");
end